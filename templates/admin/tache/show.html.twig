{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
    <h1>Tache</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tache.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ tache.libelle }}</td>
            </tr>
            <tr>
                <th>HeureDebut</th>
                <td>{{ tache.heureDebut ? tache.heureDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureFin</th>
                <td>{{ tache.heureFin ? tache.heureFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ tache.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_tache_index') }}">back to list</a>

    <a href="{{ path('admin_tache_edit', {'id': tache.id}) }}">edit</a>

    {{ include('tache/_delete_form.html.twig') }}
{% endblock %}
